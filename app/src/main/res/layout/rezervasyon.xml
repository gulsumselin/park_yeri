<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <TextView
        android:id="@+id/park_adi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Park Alanı Adı"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/koordinatlar"/>

    <TextView
        android:id="@+id/koordinatlar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Koordinatlar"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/park_adi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/onay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bu Park Yeri Size Uygun Mu?" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Hesabınız yoksa hemen Kayıt olun ve devam edin." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Hesabınız varsa Giriş yaparak devam edebilirsiniz." />


    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/registerOrSign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/sign_up"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:text="@string/sign_up"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@color/black"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/register"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:text="@string/register"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@color/transparent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
